@{
}

@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h5>@Model.Title    <img src="~/lib/img/lil_book.png" style="width: 30px; height: 30px; " class="card-img-top" alt="bookImage"></h5>

        <span class="badge bg-info" style="float:right">
            Price: $@Model.Price
        </span>
    </div>


    <ul>
        <li>Author Name: @Model.Author</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>Page Number: @Model.PageCount</li>
        <li>Publisher: @Model.Publisher</li>
        <li>ISBN: @Model.Isbn</li>


    </ul>
    <div class="text-right">
        
    </div>
        <form method="post" asp-page="/Cart">

            <input type="hidden" asp-for="@Model.BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

            <span class="card-text">
                <button type="submit" class="btn btn-outline-dark btn-sm float-end">Add to Cart</button>
            </span>
        </form>
    </div>

