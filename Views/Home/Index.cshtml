}

@* the View from the home controller *@
@model BooksViewModel
@* accessing the Books from the View in the HomeController *@

@foreach (Book b in Model.Books)
{
    //shared with the BookSummary.cshtml file and displaying what is in that file
    <partial name="BookSummary" model="b" />
}

@* passing pageinfo part of the View from the HomeController in the tag-helper section to build a pagination for me *@
<div page-model="@Model.PageInfo" page-action="Index" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-info"
     page-classes-enabled="true"
     class="btn-group pull-right m-1"></div>


