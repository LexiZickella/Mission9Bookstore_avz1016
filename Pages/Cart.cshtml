@page
@model Mission9Bookstore_avz1016.Pages.CartModel
@{
}

<h2>Your Cart</h2>

<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>Book</th>
            <th style="width:10%">Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
            <th style="width:10%">Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var i in Model.basket.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price.ToString("c")</td>
            <td>@((i.Quantity * @i.Book.Price).ToString("c"))</td>

            <td class="text-center">
                @* asp-page-handler helps the post to actually remove *@
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.basket.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-outline-info" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-outline-dark" asp-controller="Checkout" asp-action="Correspond">Checkout</a>
</div>